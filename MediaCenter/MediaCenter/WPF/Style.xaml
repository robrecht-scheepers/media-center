<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainWindowBackground" Color="#a9bcd0" />
    <SolidColorBrush x:Key="AppStandardBackground" Color="#373f51" />
    <SolidColorBrush x:Key="AppBrightColor" Color="#d8dbe2"/>
    <SolidColorBrush x:Key="AppDarkColor" Color="#1b1b1e"/>
    <SolidColorBrush x:Key="AppAccentColor" Color="#58a4b0"/>
    
    <SolidColorBrush x:Key="FontColorOnBackground" Color="White"/>
    <SolidColorBrush x:Key="FontColorInElement" Color="Black"/>
    
    <Thickness x:Key="CommonMargin" Left="5" Top="5" Right="5" Bottom="5"/>
    
    <Style TargetType="Button">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="DatePicker">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
    </Style>
</ResourceDictionary>