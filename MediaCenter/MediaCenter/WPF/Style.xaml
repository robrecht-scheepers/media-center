<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:controls="clr-namespace:MediaCenter.WPF.Controls">

    <SolidColorBrush x:Key="MainWindowBackground" Color="#6e7f80 " />
    <SolidColorBrush x:Key="AppStandardBackground" Color="#36454f " />
    <SolidColorBrush x:Key="AppBrightColor" Color="#c5ccd3"/>
    <SolidColorBrush x:Key="AppDarkColor" Color="#36454f"/>
    <SolidColorBrush x:Key="AppAccentColor" Color="#b6bfc8 "/>
    
    
    

    <sys:Double x:Key="TextButtonHeight">36</sys:Double>
    <Thickness x:Key="CommonMargin" Left="5" Top="5" Right="5" Bottom="5"/>
    <sys:Double x:Key="CommonFontSize">14</sys:Double>
    
    <Style TargetType="Button">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="FontSize" Value="{StaticResource CommonFontSize}"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
        <Setter Property="Background" Value="{StaticResource AppBrightColor}"/>
    </Style>
    <Style TargetType="DatePicker">
        <Setter Property="Margin" Value="{StaticResource CommonMargin}"/>
    </Style>
</ResourceDictionary>