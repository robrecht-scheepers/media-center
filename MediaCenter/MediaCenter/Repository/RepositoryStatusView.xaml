<UserControl x:Class="MediaCenter.Repository.RepositoryStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaCenter.Repository"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:RepositoryViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="{Binding Path=Location, StringFormat=Repository location: {0}}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
           <TextBlock Text="{Binding Path=ItemCount, StringFormat={}{0} items: }"/>
           <TextBlock Text="{Binding Path=ImageItemCount, StringFormat={}{0} images and}"/>
           <TextBlock Text="{Binding Path=VideoItemCount, StringFormat={}{0} videos}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding Path=Size, StringFormat=Size: {0}MB}"/>


    </Grid>
</UserControl>
