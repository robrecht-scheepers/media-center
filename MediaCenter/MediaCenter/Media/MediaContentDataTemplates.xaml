<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MediaCenter.Media">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Styles.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate DataType="{x:Type local:ImageContentViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{Binding ImageContent.Image}" />
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Style="{StaticResource IconButton}" Command="{Binding RotateCounterclockwiseCommand}"><Image Source="/Resources/Icons/arrow-circle-315-rev.png" Stretch="None"/></Button>
                <Button Style="{StaticResource IconButton}" Command="{Binding RotateClockwiseCommand}">
                    <Image Source="/Resources/Icons/arrow-circle-315.png" Stretch="None"/>
                </Button>
            </StackPanel>
        </Grid>
        
    </DataTemplate>
    
</ResourceDictionary>