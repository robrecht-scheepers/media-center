<UserControl x:Class="MediaCenter.Media.EditMediaInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaCenter.Media"
             xmlns:controls="clr-namespace:MediaCenter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:EditMediaInfoViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="TODO:Name"/>
        <TextBlock Grid.Row="1" Text="{Binding DateTaken, StringFormat='{}Date taken: {0:dd.MM.yyyy, HH:mm:ss}'}"/>
        <TextBlock Grid.Row="2" Text="{Binding DateAdded, StringFormat='{}Date added: {0:dd.MM.yyyy, HH:mm:ss}'}"/>

        <controls:ImageToggleButton Grid.Row="3" IsChecked="{Binding Favorite, Mode=TwoWay}" IsThreeState="{Binding MultipleItems}" Height="32" Width="32" HorizontalAlignment="Left"
                    CheckedImage="/Resources/Icons/emblem-favorite.png" UncheckedImage="/Resources/Icons/emblem-favorite-grey.png" NullImage="/Resources/Icons/emblem-favorite-half.png" />
        <controls:ImageToggleButton Grid.Row="4" IsChecked="{Binding Private, Mode=TwoWay}" IsThreeState="{Binding MultipleItems}"  Height="32" Width="32" HorizontalAlignment="Left"
                    CheckedImage="/Resources/Icons/lock.png" UncheckedImage="/Resources/Icons/lock-grey.png" NullImage="/Resources/Icons/lock-half.png"/>
        <local:EditTagsView Grid.Row="5" DataContext="{Binding TagsViewModel}"/>
    </Grid>
</UserControl>
