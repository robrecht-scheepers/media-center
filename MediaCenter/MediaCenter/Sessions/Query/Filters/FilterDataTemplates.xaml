<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MediaCenter.Sessions.Query.Filters">
    <DataTemplate DataType="{x:Type local:DatePeriodFilter}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="From" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Path=From, StringFormat='dd MM yyyy'}"/>
            <TextBlock Text="Until" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Path=Until, StringFormat='dd MM yyyy'}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:DayFilter}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Day" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Path=Day, StringFormat='dd MM yyyy'}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:TagFilter}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Tag" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Tag}"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>