<UserControl x:Class="MediaCenter.Sessions.Query.QuerySessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MediaCenter.Sessions.Query"
             xmlns:style="clr-namespace:MediaCenter.Styles"
             xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:slideshow="clr-namespace:MediaCenter.Sessions.Slideshow"
             xmlns:tags="clr-namespace:MediaCenter.Sessions.Tags"
             xmlns:filters="clr-namespace:MediaCenter.Sessions.Query.Filters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:QuerySessionViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Sessions/Query/Filters/FilterDataTemplates.xaml"/>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
                <ResourceDictionary Source="/Media/MediaItemDataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <interactivity:Interaction.Behaviors>
        <style:OpenCloseWindowBehavior WindowType="slideshow:SlideShowWindow" Trigger="{Binding SlideShowActive}" WindowDataContext="{Binding Path=SlideShowViewModel}" 
                                       OwnerWindow="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
    </interactivity:Interaction.Behaviors>
    
    <UserControl.InputBindings>
        <KeyBinding Key="Right" Modifiers="Control" Command="{Binding SelectNextImageCommand}"/>
        <KeyBinding Key="Left" Modifiers="Control" Command="{Binding SelectPreviousImageCommand}"/>
    </UserControl.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <Grid Grid.Column ="0" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <filters:FilterCollectionView Grid.Row="0" DataContext="{Binding Path=FilterCollectionViewModel}"/>
            <Button Grid.Row="1" Command="{Binding ExecuteQueryCommand}">Search</Button>
        </Grid>

        <ListBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding QuerySession.QueryResult}" SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <interactivity:Interaction.Behaviors>
                <style:ScrollIntoViewBehavior/>
            </interactivity:Interaction.Behaviors>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Thumbnail}" Height="100" Width="100" Margin="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding SelectedItemViewModel}" />
        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource IconButton}" Command="{Binding SelectPreviousImageCommand}">
            <Image Source="/Resources/Icons/arrow-180.png" Stretch="None"/>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource IconButton}" Command="{Binding SelectNextImageCommand}">
            <Image Source="/Resources/Icons/arrow.png" Stretch="None"/>
        </Button>
        
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <TextBlock DockPanel.Dock="Left" Text="{Binding SelectedItem.DateTaken, StringFormat='dd.MM.yyyy, HH:mm:ss'}"/>
                <TextBlock DockPanel.Dock="Right" Text="{Binding SelectedItem.Name, StringFormat='({0})'}"/>
            </DockPanel>
            <DockPanel Grid.Row="1" HorizontalAlignment="Stretch" >
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <ToggleButton Style="{StaticResource IconToggleButton}" IsChecked="{Binding SelectedItem.Favorite, Mode=TwoWay}">
                        <Image Stretch="None">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem.Favorite}" Value="true">
                                            <Setter Property="Source" Value="/Resources/Icons/star.png"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedItem.Favorite}" Value="false">
                                            <Setter Property="Source" Value="/Resources/Icons/star-empty.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource IconToggleButton}" IsChecked="{Binding SelectedItem.Private, Mode=TwoWay}">
                        <Image Stretch="None">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem.Private}" Value="true">
                                            <Setter Property="Source" Value="/Resources/Icons/lock.png"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedItem.Private}" Value="false">
                                            <Setter Property="Source" Value="/Resources/Icons/lock_grey.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </ToggleButton>
                </StackPanel>
                <Button DockPanel.Dock="Right" Style="{StaticResource IconButton}" Command="{Binding DeleteCurrentImageCommand}">
                    <Image Source="/Resources/Icons/cross-button.png" Stretch="None"/>
                </Button>
                <Button DockPanel.Dock="Right" Style="{StaticResource IconButton}" Command="{Binding SaveCurrentItemToFileCommand}">
                    <Image Source="/Resources/Icons/disk--arrow.png" Stretch="None"/>
                </Button>
            </DockPanel>
            <Button Grid.Row="2" HorizontalAlignment="Left" Style="{StaticResource IconButton}" Command="{Binding CopyTagsFromPreviousCommand}">
                <Image Source="/Resources/Icons/arrow-repeat.png" Stretch="None"/>
            </Button>
            <tags:TagsView Grid.Row="3" DataContext="{Binding TagsViewModel}"/>
            <Button Grid.Row="4" Command="{Binding StartSlideShowCommand}">Start Slideshow</Button>
        </Grid>
    </Grid>
        

</UserControl>
