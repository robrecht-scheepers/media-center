<UserControl x:Class="MediaCenter.Sessions.Query.QuerySessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MediaCenter.Sessions.Query"
             xmlns:style="clr-namespace:MediaCenter.Styles"
             xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:slideshow="clr-namespace:MediaCenter.Sessions.Slideshow"
             xmlns:filters="clr-namespace:MediaCenter.Sessions.Query.Filters"
             xmlns:media="clr-namespace:MediaCenter.Media"
             xmlns:controls="clr-namespace:MediaCenter.Controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:QuerySessionViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Sessions/Query/Filters/FilterDataTemplates.xaml"/>
                <ResourceDictionary Source="/Media/MediaItemDataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type local:QueryResultDetailViewModel}">
                <local:QueryResultDetailView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:QueryResultListViewModel}">
                <local:QueryResultListView/>
            </DataTemplate>
            <style:NullVisibilityConverter x:Key="NullVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <interactivity:Interaction.Behaviors>
        <style:OpenCloseWindowBehavior WindowType="slideshow:SlideShowWindow" Trigger="{Binding SlideShowActive}" WindowDataContext="{Binding Path=SlideShowViewModel}" 
                                       OwnerWindow="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
    </interactivity:Interaction.Behaviors>
    
    <UserControl.InputBindings>
        <KeyBinding Key="Right" Modifiers="Control" Command="{Binding SelectNextImageCommand}"/>
        <KeyBinding Key="Left" Modifiers="Control" Command="{Binding SelectPreviousImageCommand}"/>
    </UserControl.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <controls:HideableColumnDefinition x:Name="FilterColumn" Width="2*" Visible="{Binding ElementName=ShowFilter, Path=IsChecked }"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column ="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <filters:FilterCollectionView Grid.Row="0" DataContext="{Binding Path=FilterCollectionViewModel}"/>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Button Command="{Binding ExecuteQueryCommand}">Search</Button>
                <ComboBox ItemsSource="{Binding ResultViewModesList}" SelectedItem="{Binding ResultViewMode}"/>
            </StackPanel>
        </Grid>

        <Border Grid.Column="1" BorderBrush="#E5E5E5" BorderThickness="1" Background="Transparent" Margin="2" CornerRadius="2"/>
        <controls:ImageToggleButton x:Name="ShowFilter" Grid.Column="1" VerticalAlignment="Stretch" Width="16" HoverBackground="LightGray" IsChecked="True"
                                    CheckedImage="/Resources/Icons/control-180.png" UncheckedImage="/Resources/Icons/control.png" />

        <ContentControl Grid.Column="2" Content="{Binding QueryResultViewModel}"/>
        
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <media:EditMediaInfoView Grid.Row="0" DataContext="{Binding EditMediaInfoViewModel}" Visibility="{Binding Converter={StaticResource NullVisibilityConverter}}"/>
            <Button Grid.Row="1" Command="{Binding StartSlideShowCommand}">Start Slideshow</Button>
        </Grid>
    </Grid>
        

</UserControl>
