<UserControl x:Class="MediaCenter.Sessions.Query.QuerySessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MediaCenter.Sessions.Query"
             xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:slideshow="clr-namespace:MediaCenter.Sessions.Slideshow"
             xmlns:filters="clr-namespace:MediaCenter.Sessions.Filters"
             xmlns:media="clr-namespace:MediaCenter.Media"
             xmlns:controls="clr-namespace:MediaCenter.WPF.Controls"
             xmlns:wpf="clr-namespace:MediaCenter.WPF"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:QuerySessionViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Media/MediaItemDataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type local:QueryResultDetailViewModel}">
                <local:QueryResultDetailView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:QueryResultListViewModel}">
                <local:QueryResultListView/>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <interactivity:Interaction.Behaviors>
        <wpf:OpenCloseWindowBehavior WindowType="slideshow:SlideShowWindow" Trigger="{Binding SlideShowActive}" WindowDataContext="{Binding Path=SlideShowViewModel}" 
                                       OwnerWindow="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
    </interactivity:Interaction.Behaviors>
    
    <UserControl.InputBindings>
        <KeyBinding Key="Right" Modifiers="Control" Command="{Binding SelectNextImageCommand}"/>
        <KeyBinding Key="Left" Modifiers="Control" Command="{Binding SelectPreviousImageCommand}"/>
    </UserControl.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <controls:HideableColumnDefinition Width="*" Visible="{Binding ElementName=ShowFilter, Path=IsChecked }"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <controls:HideableColumnDefinition Width="*" Visible="{Binding ElementName=ShowEdit, Path=IsChecked }"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column ="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <filters:FilterCollectionView Grid.Row="0" DataContext="{Binding Path=FilterCollectionViewModel}"/>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Button Command="{Binding ExecuteQueryCommand}">Search</Button>
                <ComboBox ItemsSource="{Binding ResultViewModesList}" SelectedItem="{Binding SelectedResultViewMode}"/>
            </StackPanel>
        </Grid>

        <Border Grid.Column="1" BorderBrush="#E5E5E5" BorderThickness="1" Background="Transparent" Margin="2" CornerRadius="2">
            <controls:ImageToggleButton x:Name="ShowFilter" Grid.Column="1" VerticalAlignment="Stretch" Width="16" HoverBackground="LightGray" IsChecked="True"
                                        CheckedImage="/Resources/Icons/control-180.png" UncheckedImage="/Resources/Icons/control.png" />
        </Border>
        
        <ContentControl Grid.Column="2" Content="{Binding QueryResultViewModel}"/>

        <Border Grid.Column="3" BorderBrush="#E5E5E5" BorderThickness="1" Background="Transparent" Margin="2" CornerRadius="2">
            <controls:ImageToggleButton x:Name="ShowEdit" Grid.Column="1" VerticalAlignment="Stretch" Width="16" HoverBackground="LightGray" IsChecked="True"
                                    CheckedImage="/Resources/Icons/control.png" UncheckedImage="/Resources/Icons/control-180.png" />
        </Border>
        
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <media:EditMediaInfoView Grid.Row="0" DataContext="{Binding EditMediaInfoViewModel}" Visibility="{Binding Converter={StaticResource HideWhenNullConverter}}"/>
            <StackPanel Grid.Row="1">
                <Button Command="{Binding StartSlideShowCommand}">Slideshow</Button>
                <Button Command="{Binding SaveCurrentSelectionToFileCommand}">Save</Button>
                <Button Command="{Binding DeleteCurrentSelectionCommand}">Delete</Button>
            </StackPanel>
        </Grid>
    </Grid>
        

</UserControl>
