<UserControl x:Class="MediaCenter.Sessions.Staging.StagedItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:MediaCenter.Sessions.Staging"
             xmlns:media="clr-namespace:MediaCenter.Media"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="Transparent"
             d:DataContext="{d:DesignInstance Type=media:MediaItem}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Stretch="UniformToFill" Source="{Binding Thumbnail}" HorizontalAlignment="Center" Height="100" Width="100" Margin="5"/>
        <StackPanel Name="ButtonList" Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" >
            <Button Style="{StaticResource IconButton}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}, Path=SelectedItems}"
                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:StagingSessionView}}, Path=DataContext.RemoveItemsCommand}">
                <Image Source="/Resources/Icons/cross-button.png" Stretch="None"/>
            </Button>
            <Button Style="{StaticResource IconButton}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}, Path=SelectedItems}"
                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:StagingSessionView}}, Path=DataContext.BeginEditItemCommand}" >
               <Image Source="/Resources/Icons/pencil.png" Stretch="None"/>
            </Button>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="{Binding Name}" Margin="5" />
    </Grid>
</UserControl>
